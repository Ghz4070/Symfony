{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
    <div class="container-fluid col-6 text-center mt-4">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.connect, {'attr': {'class': 'form-control btn btn-warning'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}





